<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruchee.myuserprofile.Main2Activity">

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@drawable/profile_header_bg1"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_main2"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main2"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main2"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        android:layout_height="200dp"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="Ruchdee Binmad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="ruchdee.b@psu.ac.th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textColor="@android:color/background_light" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:backgroundTint="@drawable/profile_circular_border_imageview"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        android:layout_marginTop="140dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/ruchdee" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_person_add_white_24dp"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_more_vert_white_24dp"
        android:id="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
